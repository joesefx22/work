{
  "name": "ehgzly-server",
  "version": "5.0.0",
  "description": "نظام حجز الملاعب - احجزلي - النسخة النهائية مع PostgreSQL - شامل كل الميزات + الإصلاحات",
  "main": "server.js",
  "type": "commonjs",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "dev:debug": "nodemon --inspect server.js",
    "production": "NODE_ENV=production node server.js",
    "db:init": "node -e \"require('./db').createTables().then(() => console.log('✅ Database tables created')).catch(console.error)\"",
    "db:enhanced": "node -e \"require('./db').createEnhancedTables().then(() => console.log('✅ Enhanced tables created')).catch(console.error)\"",
    "db:setup": "npm run db:init && npm run db:enhanced",
    "db:seed": "node scripts/seedData.js",
    "db:reset": "node scripts/resetDatabase.js",
    "db:migrate": "node scripts/migrateToPostgres.js",
    "db:backup": "pg_dump $DATABASE_URL > backup_$(date +%Y%m%d_%H%M%S).sql",
    "db:restore": "psql $DATABASE_URL < backup_latest.sql",
    "db:health": "node -e \"require('./db').healthCheck().then(console.log).catch(console.error)\"",
    "db:indexes": "node -e \"require('./db').createIndexes().then(() => console.log('✅ Indexes created')).catch(console.error)\"",
    "test": "NODE_ENV=test jest --testTimeout=10000 --verbose",
    "test:watch": "jest --watch --verbose",
    "test:coverage": "jest --coverage --verbose",
    "test:integration": "NODE_ENV=test jest --testPathPattern=\"integration\" --testTimeout=30000",
    "test:api": "NODE_ENV=test jest --testPathPattern=\"api\" --testTimeout=15000",
    "test:db": "NODE_ENV=test jest --testPathPattern=\"database\" --testTimeout=20000",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "lint:strict": "eslint . --ext .js --max-warnings=0",
    "format": "prettier --write \"**/*.{js,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,json,md}\"",
    "security:audit": "npm audit --audit-level high",
    "security:fix": "npm audit fix",
    "security:check": "npm audit --production",
    "clean": "rm -rf node_modules package-lock.json && npm install",
    "clean:all": "rm -rf node_modules package-lock.json dist coverage .nyc_output",
    "docs": "jsdoc -c jsdoc.json",
    "docs:serve": "serve docs/",
    "docker:build": "docker build -t ehgzly-server .",
    "docker:run": "docker run -p 3000:3000 --env-file .env ehgzly-server",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up --build",
    "docker:prod": "docker-compose -f docker-compose.prod.yml up --build -d",
    "docker:stop": "docker-compose down",
    "performance:test": "artillery run load-test.yml",
    "performance:profile": "node --prof server.js",
    "performance:analyze": "node --prof-process isolate-*.log > profile.txt",
    "monitor:memory": "node scripts/memoryMonitor.js",
    "monitor:health": "node scripts/healthCheck.js",
    "backup:full": "npm run db:backup && tar -czf full-backup-$(date +%Y%m%d_%H%M%S).tar.gz .env uploads backups",
    "deploy:setup": "npm run db:setup && npm run db:seed",
    "deploy:production": "npm run security:audit && npm run test && npm run build"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "body-parser": "^1.20.2",
    "dotenv": "^16.3.1",
    "express-session": "^1.17.3",
    "bcrypt": "^5.1.0",
    "passport": "^0.6.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-local": "^1.0.0",
    "nodemailer": "^6.9.4",
    "uuid": "^9.0.0",
    "qrcode": "^1.5.3",
    "multer": "^1.4.5",
    "pg": "^8.11.3",
    "helmet": "^7.0.0",
    "express-rate-limit": "^6.8.1",
    "cookie-parser": "^1.4.6",
    "csurf": "^1.11.0",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "express-validator": "^7.0.1",
    "joi": "^17.11.0",
    "moment": "^2.29.4",
    "node-cron": "^3.0.3",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1",
    "lodash": "^4.17.21",
    "axios": "^1.6.0",
    "jsonwebtoken": "^9.0.2",
    "node-cache": "^5.1.2",
    "express-async-errors": "^3.1.1",
    "http-status-codes": "^2.3.0",
    "validator": "^13.11.0",
    "sanitize-html": "^2.11.0",
    "rate-limiter-flexible": "^4.0.0",
    "express-mongo-sanitize": "^2.2.0",
    "hpp": "^0.2.3",
    "xss-clean": "^0.1.4",
    "to-no-case": "^3.0.2",
    "ms": "^2.1.3",
    "semver": "^7.5.4",
    "chalk": "^4.1.2",
    "cli-table3": "^0.6.3",
    "figlet": "^1.7.0",
    "boxen": "^5.1.2"
  },
  "devDependencies": {
    "nodemon": "^2.0.22",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-security": "^1.7.1",
    "eslint-plugin-jest": "^27.9.0",
    "prettier": "^3.1.1",
    "jsdoc": "^4.0.3",
    "artillery": "^1.7.9",
    "serve": "^14.2.1",
    "faker": "^5.5.3",
    "mockdate": "^3.0.5"
  },
  "keywords": [
    "booking",
    "sports",
    "stadium",
    "reservation",
    "nodejs",
    "postgresql",
    "express",
    "football",
    "pitch",
    "egypt",
    "arabic",
    "football-pitch",
    "sports-booking",
    "stadium-management",
    "middle-east",
    "booking-system",
    "sports-management",
    "field-booking",
    "playground-reservation"
  ],
  "author": {
    "name": "Ehgzly Team",
    "email": "dev@ehgzly.com",
    "url": "https://ehgzly.com"
  },
  "contributors": [
    {
      "name": "Ehgzly Development Team",
      "email": "developers@ehgzly.com",
      "url": "https://github.com/ehgzly"
    }
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ehgzly/ehgzly-server.git"
  },
  "bugs": {
    "url": "https://github.com/ehgzly/ehgzly-server/issues"
  },
  "homepage": "https://ehgzly.com",
  "funding": {
    "type": "opencollective",
    "url": "https://opencollective.com/ehgzly"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0",
    "postgresql": ">=12.0"
  },
  "volta": {
    "node": "18.17.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "**/*.js",
      "!**/node_modules/**",
      "!**/coverage/**",
      "!**/test/**",
      "!**/scripts/**",
      "!**/docs/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    },
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js"
    ],
    "verbose": true,
    "forceExit": true,
    "clearMocks": true,
    "resetMocks": true,
    "restoreMocks": true
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "printWidth": 100,
    "tabWidth": 2,
    "useTabs": false,
    "trailingComma": "es5",
    "bracketSpacing": true,
    "arrowParens": "avoid"
  }
}
