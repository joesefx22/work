            if (!code) {
                discountMessage.innerHTML = '<p style="color: #dc3545;">ÙŠØ±Ø¬Ù‰ Ø¥Ø¯Ø®Ø§Ù„ ÙƒÙˆØ¯ Ø§Ù„Ø®ØµÙ…</p>';
                return;
