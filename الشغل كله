        if (userData.role === 'admin') {
          window.location.href = '/admin.html';
        } else if (userData.role === 'multi_manager') {
          window.location.href = '/admin-overview.html';
        } else if (userData.role === 'manager') {
          if (userData.pitchIds && userData.pitchIds.length > 1) {
            window.location.href = '/admin-overview.html';
          } else if (userData.pitchIds && userData.pitchIds.length === 1) {
            window.location.href = `/admin.html?pitchId=${userData.pitchIds[0]}`;
          } else {
            window.location.href = '/admin.html';
          }
        } else {
          window.location.href = '/index.html';
        }
      }, 1500);
