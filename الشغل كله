                    if (!token) {
                        window.location.href = '/login.html';
                        return;
                    }

                    const response = await fetch('/api/current-user', {
                        headers: { 'Authorization': `Bearer ${token}` }
                    });

                    if (!response.ok) throw new Error('Auth failed');
                    
