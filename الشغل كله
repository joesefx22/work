      const inputs = form.querySelectorAll('input[required], select[required]');
      let isValid = true;
      
      // Ø§Ù„ØªØ­Ù‚Ù‚ Ù…Ù† Ø§Ù„Ø­Ù‚ÙˆÙ„ Ø§Ù„Ø¥Ù„Ø²Ø§Ù…ÙŠØ©
      inputs.forEach(input => {
