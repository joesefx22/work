            throw { status: 400, message: 'Ù‡Ø°Ù‡ Ø§Ù„Ø³Ø§Ø¹Ø© ØºÙŠØ± Ù…ØªØ§Ø­Ø© Ù„Ù„Ø­Ø¬Ø²' };
