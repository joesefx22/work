          'success': 'Ù†Ø¬Ø§Ø­',
          'error': 'Ø®Ø·Ø£',
          'warning': 'ØªØ­Ø°ÙŠØ±',
          'info': 'Ù…Ø¹Ù„ÙˆÙ…Ø©'
