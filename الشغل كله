            async loadTimeSlots(stadiumId, date) {
                try {
                    this.showLoading('timeSlotsContainer', 'Ø¬Ø§Ø±ÙŠ ØªØ­Ù…ÙŠÙ„ Ø§Ù„Ø³Ø§Ø¹Ø§Øª...');
