        row.className = 'row';
        
        const col1 = document.createElement('div');
        col1.className = 'col-md-6';
        col1.innerHTML = `
          <h6>Ù…Ø¹Ù„ÙˆÙ…Ø§Øª Ø§Ù„Ø­Ø¬Ø²</h6>
