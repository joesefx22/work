                validationElement.innerHTML = `
                    <i class="bi ${icon}"></i>
                    <span>Ø§Ù„ÙƒÙˆØ¯: ${value} Ø¬Ù†ÙŠÙ‡ - ${text}</span>
                `;
            } else if (type === 'first') {
                validationElement.innerHTML = `
                    <i class="bi ${icon}"></i>
                    <span>Ø§Ù„ÙƒÙˆØ¯ Ø§Ù„Ø£ÙˆÙ„: ${value} Ø¬Ù†ÙŠÙ‡ - ${text}</span>
