                pollingAttempts++;
                
                // Ø¥ÙŠÙ‚Ø§Ù Ø§Ù„ØªØªØ¨Ø¹ Ø¨Ø¹Ø¯ 3 Ø¯Ù‚Ø§Ø¦Ù‚
                if (pollingAttempts > MAX_POLLING_ATTEMPTS) {
                    clearInterval(pollingInterval);
                    showPaymentStatus('error', 'â° Ø§Ù†ØªÙ‡Ù‰ Ø§Ù„ÙˆÙ‚Øª Ø§Ù„Ù…Ø³Ù…ÙˆØ­ Ù„Ù„Ø¯ÙØ¹. ÙŠØ±Ø¬Ù‰ Ø§Ù„Ù…Ø­Ø§ÙˆÙ„Ø© Ù…Ø±Ø© Ø£Ø®Ø±Ù‰.');
                    return;
                }
                
                try {
                    const response = await fetch(`/api/paymob/status?orderId=${paymobOrderId}`, {
                        credentials: 'include',
                        headers: {
                            'X-CSRF-Token': csrfToken
                        }
                    });
                    
                    const result = await response.json();
                    
                    if (response.ok) {
                        if (result.status === 'paid') {
                            clearInterval(pollingInterval);
                            showPaymentStatus('success', 'âœ… ØªÙ… Ø§Ù„Ø¯ÙØ¹ Ø¨Ù†Ø¬Ø§Ø­! Ø³ÙŠØªÙ… ØªØ£ÙƒÙŠØ¯ Ø­Ø¬Ø²Ùƒ Ø§Ù„Ø¢Ù†.');
                            
