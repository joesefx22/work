                        method: 'PUT',
                        headers: this.getAuthHeaders(),
                        body: JSON.stringify(data)
                    });

                    if (response.ok) {
                        this.showAlert('âœ… ØªÙ… ØªØ­Ø¯ÙŠØ« Ø¨ÙŠØ§Ù†Ø§Øª Ø§Ù„Ù…Ù„Ø¹Ø¨ Ø¨Ù†Ø¬Ø§Ø­', 'success');
