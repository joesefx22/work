                if (this.timeSlots.length === 0) {
                    container.innerHTML = this.getEmptyState('clock', 'Ù„Ø§ ØªÙˆØ¬Ø¯ Ø³Ø§Ø¹Ø§Øª', 'ÙŠÙ…ÙƒÙ†Ùƒ Ø¥Ø¶Ø§ÙØ© Ø³Ø§Ø¹Ø§Øª Ø¬Ø¯ÙŠØ¯Ø© Ù„Ù„Ù…Ù„Ø¹Ø¨');
