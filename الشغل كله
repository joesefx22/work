    // âœ… Ø§Ù„ØªØ­Ù‚Ù‚ Ù…Ù† Ù‚ÙˆØ© ÙƒÙ„Ù…Ø© Ø§Ù„Ù…Ø±ÙˆØ±
    function checkPasswordStrength() {
      const password = document.getElementById('password').value;
      const strengthBar = document.getElementById('passwordStrength');
      const lengthIcon = document.getElementById('lengthIcon');
      const symbolIcon = document.getElementById('symbolIcon');
      
      const requirements = {
        length: password.length >= 6,
        symbolOrNumber: /(?=.*[\d!@#$%^&*()_\-+=\[\]{};:'"\\|,.<>/?])/.test(password)
      };
      
      lengthIcon.className = requirements.length ? 'bi bi-check-circle-fill valid' : 'bi bi-x-circle-fill invalid';
      symbolIcon.className = requirements.symbolOrNumber ? 'bi bi-check-circle-fill valid' : 'bi bi-x-circle-fill invalid';
      
      let strength = 0;
      if (requirements.length) strength++;
      if (requirements.symbolOrNumber) strength++;
      
      strengthBar.className = 'strength-bar';
      if (password.length > 0) {
        if (strength === 1) {
          strengthBar.classList.add('strength-weak');
        } else if (strength === 2) {
          strengthBar.classList.add('strength-strong');
        }
      }
      
      return strength;
    }

    // âœ… Ø§Ù„ØªØ­Ù‚Ù‚ Ù…Ù† ØªØ·Ø§Ø¨Ù‚ ÙƒÙ„Ù…Ø§Øª Ø§Ù„Ù…Ø±ÙˆØ±
    function checkPasswordMatch() {
      const password = document.getElementById('password').value;
      const confirmPassword = document.getElementById('confirmPassword').value;
      const confirmInput = document.getElementById('confirmPassword');
      
      if (confirmPassword.length > 0) {
        if (password !== confirmPassword) {
          confirmInput.classList.add('is-invalid');
          confirmInput.classList.remove('is-valid');
        } else {
          confirmInput.classList.remove('is-invalid');
          confirmInput.classList.add('is-valid');
        }
      } else {
        confirmInput.classList.remove('is-invalid', 'is-valid');
      }
    }

