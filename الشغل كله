    function handleRoleChange() {
      const managerFields = document.getElementById('managerFields');
      const approvalNotice = document.getElementById('approvalNotice');
      const managerWarning = document.getElementById('managerWarning');
      const role = this.value;
      
      if (role === 'manager' || role === 'multi_manager') {
        managerFields.style.display = 'block';
        approvalNotice.style.display = 'block';
        managerWarning.style.display = 'block';
        loadPitches();
      } else {
        managerFields.style.display = 'none';
        approvalNotice.style.display = 'none';
        managerWarning.style.display = 'none';
      }
    }

    // âœ… Ø§Ù„ØªØ­Ù‚Ù‚ Ø§Ù„ÙÙˆØ±ÙŠ Ù…Ù† Ø§Ù„Ø­Ù‚ÙˆÙ„
    function setupFieldValidation() {
      document.querySelectorAll('#signupForm input, #signupForm select').forEach(input => {
        input.addEventListener('blur', function() {
          if (this.checkValidity()) {
            this.classList.remove('is-invalid');
            this.classList.add('is-valid');
          } else {
            this.classList.add('is-invalid');
            this.classList.remove('is-valid');
          }
        });
        
        input.addEventListener('input', function() {
          if (this.checkValidity()) {
            this.classList.remove('is-invalid');
          }
        });
      });
    }

    // ========== ØªÙ‡ÙŠØ¦Ø© Ø§Ù„ØµÙØ­Ø© ==========
