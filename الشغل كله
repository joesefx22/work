          }
        }, 5000);
      }

      getToastIcon(type) {
        const icons = {
          'success': 'bi-check-circle',
          'error': 'bi-exclamation-circle',
          'warning': 'bi-exclamation-triangle',
          'info': 'bi-info-circle'
        };
        return icons[type] || 'bi-info-circle';
      }

      getToastTitle(type) {
