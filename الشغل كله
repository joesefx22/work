    async function updateUserLoginData(userId) {
      try {
        const response = await fetch(`/api/users/${userId}/login-data`, {
          method: 'PATCH',
          headers: {
            'Content-Type': 'application/json',
            'X-CSRF-Token': document.getElementById('csrfToken').value
          },
          body: JSON.stringify({
            lastLogin: new Date().toISOString(),
            lastIp: await getClientIP(),
            loginCount: 'increment'
          })
        });
        
        if (!response.ok) {
          console.error('Failed to update user login data');
        }
      } catch (error) {
        console.error('Error updating user login data:', error);
      }
    }

