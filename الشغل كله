            downloadCSV(csv, 'payments.csv');
            adminSystem.showAlert('ØªÙ… ØªØµØ¯ÙŠØ± Ø§Ù„Ù…Ø¯ÙÙˆØ¹Ø§Øª Ø¨Ù†Ø¬Ø§Ø­', 'success');
        }

        function exportUsers() {
