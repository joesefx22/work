                    this.charts.bookings = new Chart(bookingsCtx, {
                        type: 'line',
                        data: {
                            labels: Array.from({length: 30}, (_, i) => i + 1),
                            datasets: [{
                                label: 'Ø¹Ø¯Ø¯ Ø§Ù„Ø­Ø¬ÙˆØ²Ø§Øª',
                                data: Array(30).fill(0).map(() => Math.floor(Math.random() * 20) + 5),
                                borderColor: '#1a7f46',
