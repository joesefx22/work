                return;
            }
            
            const user = JSON.parse(userData);
            const allowedRoles = ['owner', 'manager'];
            
            if (!allowedRoles.includes(user.role)) {
                window.location.href = '/unauthorized.html';
                return;
            }
            
            console.log('âœ… ØªÙ… Ø§Ù„ØªØ­Ù‚Ù‚ Ù…Ù† Ø§Ù„ØµÙ„Ø§Ø­ÙŠØ§Øª:', user.role);
