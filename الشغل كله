          remaining_amount: b.remaining_amount
        }))];

        res.json(allBookings);
      } catch (error) {
        logger.error('Get user bookings error', error);
        res.status(500).json({ message: 'Ø­Ø¯Ø« Ø®Ø·Ø£ ÙÙŠ Ø¬Ù„Ø¨ Ø§Ù„Ø­Ø¬ÙˆØ²Ø§Øª' });
      }
