      const formTitle = document.getElementById('formTitle');
      if (formTitle) {
        formTitle.setAttribute('role', 'heading');
        formTitle.setAttribute('aria-level', '2');
      }

      // Ø¥Ø¹Ø¯Ø§Ø¯ event listeners
      document.getElementById('signupForm').addEventListener('submit', handleFormSubmit);
      document.getElementById('role').addEventListener('change', handleRoleChange);
      setupFieldValidation();

      // Ø§Ø³ØªØ¹Ø§Ø¯Ø© Ø§Ù„Ø¯ÙˆØ± Ø§Ù„Ù…Ø­ÙÙˆØ¸ Ø¥Ù† ÙˆØ¬Ø¯
      const savedRole = localStorage.getItem('userRole');
      if (savedRole) {
        document.getElementById('role').value = savedRole;
        if (savedRole === 'manager' || savedRole === 'multi_manager') {
          document.getElementById('managerFields').style.display = 'block';
          document.getElementById('approvalNotice').style.display = 'block';
          document.getElementById('managerWarning').style.display = 'block';
          loadPitches();
        }
      }
    });
  </script>
