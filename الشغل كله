    async function logout() {
      try {
        await fetch('/logout', { method: 'POST' });
        localStorage.removeItem('authToken');
        localStorage.removeItem('userProfile');
        window.location.href = '/login.html';
      } catch (error) {
        window.location.href = '/login.html';
      }
    }

