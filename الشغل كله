            headers: {
              'Authorization': `Bearer ${this.authToken}`
            }
          });

          if (response.ok) {
            this.isAuthenticated = true;
          } else {
            throw new Error('Not authenticated');
          }
        } catch (error) {
          this.showToast('Ø¬Ù„Ø³Ø© Ø§Ù„Ø¹Ù…Ù„ Ù…Ù†ØªÙ‡ÙŠØ©ØŒ ÙŠØ±Ø¬Ù‰ ØªØ³Ø¬ÙŠÙ„ Ø§Ù„Ø¯Ø®ÙˆÙ„ Ù…Ø±Ø© Ø£Ø®Ø±Ù‰', 'error');
