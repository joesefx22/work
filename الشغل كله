        async function exportToPDF() {
            try {
                const tab = document.querySelector('.tab-pane.active').id;
                const endpoint = `/api/export/${tab || 'dashboard'}/pdf`;
                const filename = `${tab}-${new Date().toISOString().split('T')[0]}.pdf`;

                ownerSystem.showAlert('Ø¬Ø§Ø±ÙŠ Ø§Ù„ØªØ­Ø¶ÙŠØ±...', 'info');

                const response = await fetch(endpoint, {
                    headers: ownerSystem.getAuthHeaders()
                });

                if (response.ok) {
                    const blob = await response.blob();
                    const url = window.URL.createObjectURL(blob);
                    const a = document.createElement('a');
                    a.href = url;
                    a.download = filename;
                    document.body.appendChild(a);
                    a.click();
                    document.body.removeChild(a);
                    window.URL.revokeObjectURL(url);
                    ownerSystem.showAlert('âœ… ØªÙ… Ø§Ù„ØªØµØ¯ÙŠØ± Ø¨Ù†Ø¬Ø§Ø­', 'success');
                } else {
                    throw new Error('ÙØ´Ù„ Ø§Ù„ØªØµØ¯ÙŠØ±');
                }
            } catch (error) {
                ownerSystem.handleApiError(error, 'exportToPDF');
            }
        }

        async function exportToExcel() {
            try {
                const tab = document.querySelector('.tab-pane.active').id;
                const data = ownerSystem[`all${tab.charAt(0).toUpperCase() + tab.slice(1)}`] || [];
                const filename = `${tab}-${new Date().toISOString().split('T')[0]}.xlsx`;

                ownerSystem.showAlert('Ø¬Ø§Ø±ÙŠ Ø§Ù„ØªØ­Ø¶ÙŠØ±...', 'info');

                const response = await fetch('/api/export/excel', {
