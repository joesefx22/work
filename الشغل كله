      formatDate(dateString) {
        try {
          const date = new Date(dateString);
          const options = { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' };
          return date.toLocaleDateString('ar-EG', options);
        } catch {
          return dateString;
        }
      }

      getRequestStatusClass(status) {
