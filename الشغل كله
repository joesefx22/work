            const validationElement = document.getElementById(`${type}Validation`);
            const icon = isValid ? 'bi-check-circle-fill text-success' : 'bi-x-circle-fill text-danger';
            const text = isValid ? 'ØµØ§Ù„Ø­' : 'ØºÙŠØ± ØµØ§Ù„Ø­';
            
