                } else {
                    throw new Error(result.message || 'ÙØ´Ù„ ÙÙŠ Ø¨Ø¯Ø¡ Ø¹Ù…Ù„ÙŠØ© Ø§Ù„Ø¯ÙØ¹');
                }
                
            } catch (error) {
