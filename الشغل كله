                        method: 'PUT',
                        headers: this.getAuthHeaders(),
                        body: JSON.stringify({
                            cancellation_reason: reason || 'Ø¥Ù„ØºØ§Ø¡ Ù…Ù† Ø§Ù„Ø£Ø¯Ù…Ù†'
