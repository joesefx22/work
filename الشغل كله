            getStatusBadgeClass(status) {
                const classes = {
                    'confirmed': 'bg-success',
                    'pending': 'bg-warning',
                    'cancelled': 'bg-danger'
                };
                return classes[status] || 'bg-secondary';
            }

            getStatusText(status) {
                const texts = {
                    'confirmed': 'Ù…Ø¤ÙƒØ¯',
                    'pending': 'Ù‚ÙŠØ¯ Ø§Ù„Ø§Ù†ØªØ¸Ø§Ø±',
