            getSlotStatusText(status) {
                const texts = {
                    'available': 'Ù…ØªØ§Ø­',
                    'booked': 'Ù…Ø­Ø¬ÙˆØ²',
                    'pending': 'Ù‚ÙŠØ¯ Ø§Ù„Ø§Ù†ØªØ¸Ø§Ø±'
