function escapeHtml(str) {
  if (str === undefined || str === null) return "";
  return String(str)
    .replace(/&/g, "&amp;")
    .replace(/</g, "&lt;")
    .replace(/>/g, "&gt;");
}
function showError(msg) {
  const box = document.getElementById("alertsContainer");
  if (box) box.innerHTML = `<div class="alert alert-danger">${msg}</div>`;
}
