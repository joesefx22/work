                        method: 'POST',
                        headers: this.getAuthHeaders(),
                        body: JSON.stringify({
                            cancellation_reason: reason || 'Ø¥Ù„ØºØ§Ø¡ Ù…Ù† ØµØ§Ø­Ø¨ Ø§Ù„Ù…Ù„Ø¹Ø¨'
