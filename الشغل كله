            populatePitchSelector() {
                const selector = document.getElementById('pitchSelector');
                selector.innerHTML = '<option value="all">Ø¹Ø±Ø¶ ÙƒÙ„ Ø§Ù„Ù…Ù„Ø§Ø¹Ø¨</option>';
                
                this.managedPitches.forEach(pitch => {
