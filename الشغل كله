    app.get('/api/stadiums/:stadiumId/time-slots', async (req, res) => {
      try {
        const { stadiumId } = req.params;
        const { date } = req.query;
        
        if (!date) {
          return res.status(400).json({ message: 'Ø§Ù„ØªØ§Ø±ÙŠØ® Ù…Ø·Ù„ÙˆØ¨' });
        }

