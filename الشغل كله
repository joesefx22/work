            viewStadiumDetails(stadiumId) {
                const stadium = this.allPitches.find(s => s.id === stadiumId);
                if (!stadium) return;

                const features = stadium.features && stadium.features.length > 0 
                    ? stadium.features.join('\nâ€¢ ') 
                    : 'Ù„Ø§ ØªÙˆØ¬Ø¯ Ù…Ù…ÙŠØ²Ø§Øª';

